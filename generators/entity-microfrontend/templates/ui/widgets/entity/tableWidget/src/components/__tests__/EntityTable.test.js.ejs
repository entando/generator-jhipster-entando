      <%_ } else if(['Integer','Long', 'BigDecimal', 'Float', 'Double'].includes(fieldType)) { _%>
          <%= entityInstance %>Mocks[<%= index %>].<%= field.fieldName %>.toString()
      <%_ } else { _%>
        <%= entityInstance %>Mocks[<%= index %>].<%= field.fieldName %>
      <%_ } _%>
